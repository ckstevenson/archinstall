{
    "audio": "pipewire",
    "bootloader": "systemd-bootctl",
    "custom-commands": [
        "usermod -aG docker,libvirt cameron",
        "mv /home /home-old",
        "btrfs subvolume create /home",
        "btrfs subvolume create /snapshots",
        "cp --reflink -pr /home-old/* /home/",
        "rm -rf /home-old"
    ],
    "filesystem": "btrfs",
    "gfx_driver": "All open-source (default)",
    "harddrive": {
        "path": "/dev/sda"
    },
    "hostname": "p51",
    "kernels": [
        "linux",
        "linux-hardened"
    ],
    "keyboard-language": "us",
    "mirror-region": "Germany",
    "nic": {
        "NetworkManager": false,
        "nic": "enp0s31f6"
    },
    "ntp": true,
    "packages": [
        "alacritty",
        "bluez",
        "bluez-utils",
        "bspwm",
        "dmenu",
        "ttf-dejavu",
        "dnsmasq",
        "docker",
        "firefox",
        "git", 
        "github-cli",
        "iwd",
        "libvirt",
        "neovim",
        "openssh",
        "pass",
        "rsync",
        "shellcheck",
        "sxhkd",
        "sshpass",
        "ttf-dejavu",
        "ttf-liberation",
        "virt-viewer",
        "wget", 
        "xdg-user-dirs",
        "xf86-video-vesa",
        "xorg",
        "zsh",
        "zsh-completions"
    ],
    "profile": "xorg",
    "services": ["docker","sshd","iwd"],
    "superusers": {
        "cameron": {
            "!password": "changeme"
        }
    },
    "sys-encoding": "utf-8",
    "sys-language": "en_US",
    "timezone": "Europe/Berlin",
    "users": {}
}

