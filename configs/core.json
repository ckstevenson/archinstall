{
    "audio": "pipewire",
    "bootloader": "systemd-bootctl",
    "custom-commands": [
        "usermod -aG docker,libvirt cameron",
        "mv /home /home-old",
        "btrfs subvolume create /home",
        "btrfs subvolume create /snapshots",
        "cp --reflink -pr /home-old/* /home/",
        "rm -rf /home-old"
    ],
    "filesystem": "btrfs",
    "gfx_driver": "All open-source (default)",
    "harddrive": {
        "path": "/dev/sda"
    },
    "hostname": "core",
    "kernels": [
        "linux",
        "linux-hardened"
    ],
    "keyboard-language": "us",
    "mirror-region": "Germany",
    "nic": {
        "NetworkManager": false,
        "nic": "enp0s31f6"
    },
    "ntp": true,
    "packages": [
        "iwd",
        "openssh"
    ],
    "profile": "xorg",
    "superusers": {
        "cameron": {
            "!password": "changeme"
        }
    },
    "services": [
        "sshd",
        "iwd"
    ],
    "sys-encoding": "utf-8",
    "sys-language": "en_US",
    "timezone": "Europe/Berlin",
    "users": {}
}

