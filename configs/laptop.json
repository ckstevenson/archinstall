{
    "audio": "pipewire",
    "bootloader": "grub-install",
    "custom-commands": [
        "usermod -aG docker,libvirt cameron",
        "systemctl enable sshd"
    ],
    "filesystem": "btrfs",
    "gfx_driver": "All open-source",
    "harddrive": {
        "path": "/dev/vda"
    },
    "hostname": "archinstall",
    "kernels": [
        "linux",
		"linux-hardened"
    ],
    "keyboard-language": "us",
    "mirror-region": "Germany",
    "nic": {
        "NetworkManager": false,
		"nic": "enp1s0"
    },
    "ntp": true,
    "packages": [
        "github-cli",
		"docker", 
		"git", 
		"wget", 
		"zsh", 
		"bspwm",
		"sxhkd",
		"neovim",
		"rsync",
		"xorg",
        "alacritty",
        "bluez",
        "bluez-utils",
        "xf86-video-vesa",
        "libvirt",
        "iptables-nft",
        "dnsmasq",
        "openssh"
	],
    "profile": "xorg",
    "services": ["docker"],
    "superusers": {
        "cameron": {
            "!password": "changeme"
        }
    },
    "sys-encoding": "utf-8",
    "sys-language": "en_US",
    "timezone": "Europe/Berlin",
    "users": {}
}

