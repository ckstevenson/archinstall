{
    "audio": "pipewire",
    "bootloader": "systemd-bootctl",
    "custom-commands": [
        "usermod -aG docker,libvirt cameron",
        "mv /home /home-old",
        "btrfs subvolume create /home",
        "btrfs subvolume create /snapshots",
        "cp --reflink -pr /home-old/* /home/",
        "rm -rf /home-old"
    ],
    "filesystem": "btrfs",
    "gfx_driver": "All open-source",
    "harddrive": {
        "path": "/dev/vda"
    },
    "hostname": "archinstall",
    "kernels": [
        "linux",
        "linux-hardened"
    ],
    "keyboard-language": "us",
    "mirror-region": "Germany",
    "nic": {
        "NetworkManager": false,
        "nic": "enp1s0"
    },
    "ntp": true,
    "packages": [
        "alacritty",
        "bluez",
        "bluez-utils",
        "bspwm",
        "dmenu",
        "dnsmasq",
        "docker",
        "git", 
        "github-cli",
        "libvirt",
        "neovim",
        "openssh",
        "rsync",
        "sxhkd",
        "sshpass",
        "wget", 
        "xdg-user-dirs",
        "xf86-video-vesa",
        "xorg",
        "zsh",
        "zsh-completions"
    ],
    "profile": "xorg",
    "services": ["docker","sshd"],
    "superusers": {
        "cameron": {
            "!password": "changeme"
        }
    },
    "sys-encoding": "utf-8",
    "sys-language": "en_US",
    "timezone": "Europe/Berlin",
    "users": {}
}

